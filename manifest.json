{
  "name": "Screen-reco",
  "version": "1.0",
  "description": "Records your screen with ease...ðŸ¥³ðŸ¥³",
  "manifest_version": 3,
  "icons": {
    "128": "/assets/logo16.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/logo16.png",
      "32": "/assets/logo16.png",
      "128": "/assets/logo16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "tabs", "scripting", "storage"]
}
